extends layouts/main
include mixins/checkbox.pug


block content
  .form__container
    form(id="jsAddressSearchForm")
      .search__wrapper
        .search-bar__wrapper
          input(type="text" id="jsAddressInput" name="address" placeholder="운동할 동네 추가하기(최대 5개)" autocomplete="off")
          button(id="jsAddressSearchBtn")
            i.fas.fa-search
        ul#jsResult
    form(action=`/want-health${routes.wantHealthUpload}`, method="post", style="padding-top:50px;")
      #wantAddress
      .checkbox__wrapper
        .input-info 필요한 항목을 선택해주세요. (복수선택가능)
        ul
          +talentCheckbox("checkbox_1","wantCategory[]", "근력강화")
          +talentCheckbox("checkbox_2","wantCategory[]", "다이어트")
          +talentCheckbox("checkbox_3","wantCategory[]", "자세교정")
          +talentCheckbox("checkbox_4","wantCategory[]", "근육증가")
          +talentCheckbox("checkbox_5","wantCategory[]", "재활분야")
          +talentCheckbox("checkbox_6","wantCategory[]", "유연성")
      textarea(name="wantProgram" placeholder="운동을 할려고 하는 이유, 자신의 특징, 원하는 타입의 트레이너 등 자세하게 작성해보세요. 인삿말을 빼놓지 마세요😀")
      input(type="submit", value="업로드")